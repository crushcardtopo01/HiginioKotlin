<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practica 06"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/tvPractica4numero1"
                android:inputType="number"
                android:hint="Ingrese el primer valor "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/tvPractica4numero2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Ingrese el segundo valor "
                />
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/tvPractica10cadena2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese clave"
                android:inputType="textPassword"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btPractica4BotonOperar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operar"/>
            <TextView
                android:id="@+id/tvPractica4Reultado"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Resultado: "/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practica 10"
                android:fontFamily="sans-serif-black"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <EditText
                android:id="@+id/tvPractica10cadena1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese nombre"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btPractica10Verificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Verificar"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>

            <Button
                android:id="@+id/cambiarActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar de Activity" />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>
            <EditText
                android:id="@+id/tvClave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese clave"
                />

            <Button
                android:id="@+id/cambiarActivityValores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar de Activity"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etpractica15t1"
                android:hint="Ingrse nombr del archivo"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btGuardar"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Grabar"/>
                <Button
                    android:id="@+id/btRecuperar"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Recuperar"/>
            </LinearLayout>


            <EditText
                android:id="@+id/etPractica15t2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="#FFEB3B" />









            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practica 16"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPractica16et1"
                android:hint="Ingrese el código del producto"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPractica16et2"
                android:hint="Ingrese Descripcion"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etPractica16et3"
                android:hint="Ingrese Precio"
                />
            <Button
                android:text="Alta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPractica16bt1"
                />
            <Button
                android:text="Consulta por Codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPractica16bt2"
                />
            <Button
                android:text="Consulta por descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPractica16bt3"
                />
            <Button
                android:text="Baja por codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPractica16bt4"
                />
            <Button
                android:text="Modificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btPractica16bt5"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Practica 25"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btGato"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Gato"/>

                <Button
                    android:id="@+id/btLeon"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="León"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btIniciarAudio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iniciar"/>

                <Button
                    android:id="@+id/btPausar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pausa"/>

                <Button
                    android:id="@+id/btContinuar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Continuar"/>
                <Button
                    android:id="@+id/btDetener"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Detener"/>
                <Button
                    android:id="@+id/btNoCircular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reproducir de forma  corcular"/>




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>







            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="20dp"
                android:background="#000"/>









        </LinearLayout>


    </ScrollView>

</LinearLayout>